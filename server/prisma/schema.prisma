datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt   DateTime    @default(now())
  firstName   String?
  id          String      @id @default(cuid())
  lastName    String?
  password    String
  roles       String[]
  scanHistory ScanHistory
  updatedAt   DateTime    @updatedAt
  username    String      @unique
}

model Product {
  code                 String?
  compared_to_category String?
  emissions            Float?
  countries            String?
  createdAt            DateTime      @default(now())
  id                   String        @id @default(cuid())
  palmOil              Boolean?
  product_name         String
  scanHistory          ScanHistory[]
  updatedAt            DateTime      @updatedAt
}

model ScanHistory {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  products  Product[]
  updatedAt DateTime  @updatedAt
  users     User      @relation(fields: [usersId], references: [id])
  usersId   String
}